{% extends 'admin/master' %}

{% block content %}
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">

		<div class="row">
      <div class="col-lg-12"><h2>Change Users Rules</h2></div>
      <div id="alerts" class="col-lg-12"></div>

      <div class="col-md-12">
        <div class="panel panel-default">
					<div class="panel-heading">User Status</div>
					<div class="panel-body">

            <form id="changerule_form" class="form-horizontal" action="#">
              {{ csrfField }}
							<fieldset>

								<div class="form-group">
									<label class="col-md-2 control-label" for="steamid">Steam ID</label>
									<div class="col-md-10">
									   <input id="steamid" name="steamid" type="text" placeholder="User ID in Steam Community" class="form-control">
									</div>
								</div>

                <div class="form-group">
									<label class="col-md-2 control-label" for="level">Level</label>
									<div class="col-md-10">
                    <select id="level" name="level" class="form-control">
                      <option value="0">Typical User</option>
                      <option value="1">Normal Admin</option>
                      <option value="2">Global Admin</option>
                    </select>
									</div>
								</div>

								<!-- Form actions -->
								<div class="form-group">
									<div class="col-md-12 widget-right">
										<div id="submitbtn" class="btn btn-default btn-lg btn-block">Submit</div>
									</div>
								</div>
							</fieldset>
						</form>

					</div>
				</div>
			</div><!--/.col-md-6-->

		</div><!--/.row-->
	</div>
  {% endblock %}
